<div class="col-md-12">
  <h2 class="text-center">我加入的讨论版</h2>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Post Count</th>
        <th>Last Update</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(truncate(group.title, length: 10), group_path(group)) %></td>
          <td><%= truncate(group.description, length: 20) %></td>
          <td><%= group.posts.count %></td>
          <td><%= group.updated_at.to_s(:long) %></td>
          <td>
            <%= link_to("Edit", edit_account_group_path(group), class: "btn btn-info btn-xs") %>
            <%= link_to("Delete", account_group_path(group), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
